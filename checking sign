#include <stdio.h>
int main()
{
    float num;
    printf("Enter a number : ");
    scanf("%d",&num);
    if(num==0)
    {
        printf("The number is zero");
    }
    else if(num>0)
    {
        printf("Thr number is positive");
    }
    else
    {
        printf("The number is negative");
    }
    return 0;
}
